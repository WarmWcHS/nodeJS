<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/bs/css/bootstrap.min.css">
</head>
<body>
    <% if (user) { %>
        <img src = <%=user.img%>> <span><%=user.name%></span> <button class="btn btn-primary btn-logout">登出</button>
    <% } else { %>
        <button class="btn btn-primary btn-login">登入</button> <button class=" btn btn-primary">註冊</button>
    <% } %>
    <script>
        if(document.querySelector(".btn-login")){
            document.querySelector(".btn-login").addEventListener("click", e => {
            window.location.href = "/login"
        })
        }
        if(document.querySelector(".btn-logout")){
            document.querySelector(".btn-logout").addEventListener("click", e => {
            window.location.href = "/logout"
        })
        }

    </script>
</body>
</html>